    <!-- 用户管理 -->
    <select id="selectListPara" resultType="java.util.Map">
        select s1.*,s2.roleName from
        (select id, username, name, status, roleCode from t_user where username != 'admin'
        <if test="username!=''">
            and username like concat('%',#{username},'%')
        </if>
        <if test="name!=''">
            and name like concat('%',#{name},'%')
        </if>
        )s1 left JOIN
        (select * from t_role)s2 on s1.roleCode = s2.roleCode where 1=1
        <if test="roleName!=''">
            and roleName like concat('%',#{roleName},'%')
        </if>
    </select>

    <select id="checkUsername" resultType="java.lang.Integer">
        select count(id) from t_user where username=#{username}
        <if test="id!=null and id !=''">
            and id != #{id}
        </if>
    </select>

    <!-- 根据用户查询用户信息 -->
    <select id="selectByUsername" resultType="java.util.Map">
        SELECT
            id,
            username,
            password,
            name,
            status,
            roleCode,
            major
        FROM t_user
        WHERE username = #{username}
    </select>

    <select id="selectStudentsByInstituteAndMajor" resultType="java.util.Map" parameterType="java.lang.String">
        SELECT
            a.id,
            a.NAME,
            a.username,
            stu_class,
            training_site,
            company,
            a.institute,
            note,
            b.major_name AS major
        FROM
            t_user a,
            major b
        WHERE
            a.major = b.major_code
            AND a.institute = #{institute}
            AND a.major = #{major}
            AND a.roleCode LIKE 'stu%'
    </select>

